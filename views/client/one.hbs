
	<table class = "head-of-left">
		<tbody>
			<tr>
				<th>
					Email:
				</th>
				<td>
					<a href='mailto:{{client.mail}}' target='_blank'>{{client.mail}}</a>
				</td>
			</tr>
			<tr>
            <tr>
				<th>
					Imię:
				</th>
				<td>
					{{client.name}}
				</td>
			</tr>
			<tr>
				<th>
					Data następnego kontaktu:
				</th>
				<td>
					{{client.nextContact}}
				</td>
			</tr>
			{{#if client.notes}}
				<tr>
					<th>
						Notatka:
					</th>
					<td>
						{{client.notes}}
					</td>
				</tr>
			{{/if}}
		</tbody>

		<p>
			<form method="GET" action="/client/forms/edit/{{client.id}}">
			<button type="submit">Edytuj</button>
			</form>
		</p>

<p>{{>go-to-client-list}}</p>

	</table>
</div>